<!DOCTYPE html>
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/home.css">
    <title>Expenses</title>
  </head>
  <body>
    <div class="container">
        <form class="expense-form" action="/add-expense" method="POST" >
            <div class="input-container">
                <label for="Expense" class="form-label">Choose Expense Amount: </label>
                <input type="text" id="text1" class="form-control" name="amount">
            </div>
            
            <br>
            <div class="input-container">
                <label for="description">Choose Description: </label>
                <input type="text" id="text2" class="form-control" name="description">
            </div>
            
            <br>
            <div class="input-container">
                <label for="Category">Choose a Category: </label>
                <select id="category" name="category" class="form-select">
                    <option value="fuel">Fuel</option>
                    <option value="food">Food</option>
                    <option value="electricity">Electricity</option>
                    <option value="movie">Movie</option>
                </select>
            <br>
            </div>
            <div class="text-center">
                <input class="btn btn-primary" id="btn" type="submit" value="Add Expense">
            </div>    
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= expense.amount %></td>
                        <td><%= expense.description %></td>
                        <td><%= expense.category %></td>
                        <td>
                            <button class="btn delete-btn" data-expense-id="<%= expense.id %>">Delete</button>
                        </td> <!-- Delete button in the new column -->
    
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
  </body>
</html>
